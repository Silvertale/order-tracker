<script src="/assets/order_create_controller"></script>
<div class="container" ng-app="create_app" ng-controller="create_controller">

    
    <form action="/create" method="POST">
        <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>        
        
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#customer" aria-controls="customer" role="tab" data-toggle="tab">Customer</a></li>
            <li role="presentation"><a href="#consultant" aria-controls="consultant" role="tab" data-toggle="tab">Consultant</a></li>
        </ul>
        <div class="tab-content">
        <div role="tab-pane" class="tab-pane active well" id="customer">
            <h2 class="center-me">Customer Information</h2>
        <div class="row">
        <input type="text" class="col-md-6 text" name="c_first_name" placeholder="First Name">
        <input type="text" class="col-md-6 text" name="c_last_name" placeholder="Last Name">
        <input type="text" class="col-md-6 text" name="c_address" placeholder="Address">
        <input type="text" class="col-md-6 text" name="c_city" placeholder="City">
        <input type="text" class="col-md-6 text" name="c_zip" placeholder="Zip">
        <input type="text" class="col-md-6 text" name="c_state" placeholder="State">
        <input type="text" class="col-md-6 text" name="c_telephone" placeholder="Telephone">
        <input type="text" class="col-md-6 text" name="c_email" placeholder="Email">
        </div>
            
            <hr>
            <h2 class="center-me">Reception Information</h2>
        <div class="row">
        <input type="text" class="col-md-6 text" name="r_first_name" placeholder="First Name">
        <input type="text" class="col-md-6 text" name="r_last_name" placeholder="Last Name">
        <input type="text" class="col-md-6 text" name="r_address" placeholder="Address">
        <input type="text" class="col-md-6 text" name="r_city" placeholder="City">
        <input type="text" class="col-md-6 text" name="r_state" placeholder="State">
        <input type="text" class="col-md-6 text" name="r_zip" placeholder="Zip">
        <input type="text" class="col-md-6 text" name="r_telephone" placeholder="Telephone">
        <input type="text" class="col-md-6 text" name="r_email" placeholder="Email">
        <input type="text" class="col-md-6 text date" name="r_date" placeholder="Date">
        <input type="text" class="col-md-6 text" name="r_time" placeholder="Time">
        <input type="text" class="col-md-6 text" name="r_special_instructions" placeholder="Special Instructions">
        <input type="text" class="col-md-6 text" name="r_package" placeholder="Package">
        </div>
        </div>
        
        <div role="tab-pane" class="tab-pane well" id="consultant">
            <h2 class="center-me">Tier Options</h2>
        <div class="row">            
        <input type="text" class="col-md-4 text" name="t1_size" placeholder="Size">
        <input type="text" class="col-md-4 text" name="t1_flavor" placeholder="Flavor">
        <input type="text" class="col-md-4 text" name="t1_filling" placeholder="Filling">
        </div>
            <hr>
        <div class="row">
        <input type="text" class="col-md-4 text" name="t2_size" placeholder="Size">
        <input type="text" class="col-md-4 text" name="t2_flavor" placeholder="Flavor">
        <input type="text" class="col-md-4 text" name="t2_filling" placeholder="Filling">
        </div>
            <hr>
        <div class="row">
        <input type="text" class="col-md-4 text" name="t3_size" placeholder="Size">
        <input type="text" class="col-md-4 text" name="t3_flavor" placeholder="Flavor">
        <input type="text" class="col-md-4 text" name="t3_filling" placeholder="Filling">
        </div>
            <hr>
        <div class="row">
        <input type="text" class="col-md-4 text" name="t4_size" placeholder="Size">
        <input type="text" class="col-md-4 text" name="t4_flavor" placeholder="Flavor">
        <input type="text" class="col-md-4 text" name="t4_filling" placeholder="Filling">
        </div>
            <hr>
        <div class="row">
        <input type="text" class="col-md-4 text" name="t5_size" placeholder="Size">
        <input type="text" class="col-md-4 text" name="t5_flavor" placeholder="Flavor">
        <input type="text" class="col-md-4 text" name="t5_filling" placeholder="Filling">
        </div>
        
            <hr>
            <h2 class="center-me">Cake Pricing</h2>
        <div class="row">
        <input type="text" class="col-md-6 text" name="base_price" placeholder="Base Price">
        <input type="text" class="col-md-6 text" name="flower_price" placeholder="Flower Price">
        <input type="text" class="col-md-6 text" name="rolled_chocolate" placeholder="Rolles Chocolate Price">
        <input type="text" class="col-md-6 text" name="tiering_price" placeholder="Tiering Price">
        <input type="text" class="col-md-6 text" name="delivery_price" placeholder="Delivery Price">
        <input type="text" class="col-md-6 text" name="balance" placeholder="Balance">
        <input type="text" class="col-md-6 text" name="deposit" placeholder="Deposit">
        <input type="text" class="col-md-6 text" name="vendor_balance" placeholder="Vendor Balance">
        <input type="text" class="col-md-6 text" name="consultant" placeholder="Consultant">
        </div>
        </div>
        </div>
            
        <input type="submit" class="btn btn-default" value="GO!">
        
    </form>
    
    <script>
        $('#customer a').click(function (e) {
          e.preventDefault()
          $(this).tab('show')
        })
        
        $('#consultant a').click(function (e) {
          e.preventDefault()
          $(this).tab('show')
        })
        
        window.onload = function(){
            $('.date').datepicker();   
        }
    </script>
    
    
    
    
    
</div>